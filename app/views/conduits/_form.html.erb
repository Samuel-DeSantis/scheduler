<%= form_with(model: conduit) do |form| %>
  <% if conduit.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(conduit.errors.count, "error") %> prohibited this conduit from being saved:</h2>

      <ul>
        <% conduit.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class='form-group'>
    <%= form.label :tag %>
    <%= form.text_field :tag, class: 'form-entry' %>
  </div>
  <div class='form-group'>
    <%= form.label :size %>
    <%= form.text_field :size, class: 'form-entry' %>
  </div>
  <div class='form-group'>
    <%= form.label :to %>
    <%= form.text_field :to, class: 'form-entry' %>
  </div>
  <div class='form-group'>
    <%= form.label :from %>
    <%= form.text_field :from, class: 'form-entry' %>
  </div>
  <div class='form-group' hidden>
    <%= form.label :project_id %>
    <%= form.number_field :project_id, value: @project.id, class: 'form-entry' %>
  </div> 
  <div>
    <%= form.submit class: 'btn-hollow' %>
  </div>
<% end %>

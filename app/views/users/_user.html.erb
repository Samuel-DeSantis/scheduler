<h1>User Profile</h1>
<div id="<%= dom_id user %>">
  <p>
    <strong>Username:</strong>
    <%= user.username %>
  </p>
  <p>
    <strong>First name:</strong>
    <%= user.first_name %>
  </p>
  <p>
    <strong>Last name:</strong>
    <%= user.last_name %>
  </p>
  <p>
    <strong>Password digest:</strong>
    <%= user.password %>
  </p>
  <p>
    <strong>Email:</strong>
    <%= user.email %>
  </p>
  <% if user.admin %>
    <p>
      <strong>Admin:</strong>
      <%= user.admin %>
    </p>
  <% end %>
</div>

<style type='text/css'>
  .form-container {
    display: flex;
    justify-content: center;
  }
  .form {
    padding-bottom: 2rem;
  }
  .group {
    padding-bottom: 0.5rem;
  }
  .entry {
    display: block;
    padding: 0.25rem;
  }
  .submit {
    padding-top: 0.5rem;
    padding-bottom: 0.5rem;
    padding-left: 1rem;
    padding-right: 1rem;

    text-align: right;
    border: solid green 1px;
    border-radius: 0.25rem;
    background-color: white;
    color: green;
    text-decoration: none;
  }
  .submit:hover {
    cursor: pointer;
    background-color: green;
    color: white;
  }
  #to_sign_up {
    top: 0;
    display: block;
    color: inherit;
    text-decoration: none;
    font-style: italic;
  }
  #to_sign_up:hover {
    text-decoration: underline;
  }
</style>

<div class='form-container'>
  <div>
    <h1 id='header'>Sign In</h1>
    <div class='form'>
      <%= render 'sign_in' %>
    </div>
    <div id='subsection'>
      <p>Don't have an account?</p>
      <%= link_to "Sign Up Here", new_user_path, id: 'to_sign_up' %>
    </div>
  </div>
</div>